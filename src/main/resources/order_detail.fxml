<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx" fx:id="order_detail_pane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.OrderDetailContainer"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" layoutX="131.0" layoutY="50.0" prefHeight="200.0" prefWidth="100.0"
              AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
              AnchorPane.topAnchor="5.0">
            <children>
                <ScrollPane fx:id="detailScroll" prefHeight="NaN" prefWidth="800.0">
                </ScrollPane>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" fx:id="totalPrice" minWidth="100.0" text="You order is preparing. Thank you!">

                        </Label>
                    </children>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button mnemonicParsing="false" onAction="#btnAcceptClicked" text="OK"/>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
