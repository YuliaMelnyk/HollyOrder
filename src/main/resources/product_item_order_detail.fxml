<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.OrderDetailContainer"
      prefHeight="230.0" prefWidth="300.0" stylesheets="@styles/style.css">

    <VBox.margin>
        <Insets left="10.0" top="10.0" right="10.0" bottom="10.0"></Insets>
    </VBox.margin>
    <padding>
        <Insets left="50.0" top="20.0"></Insets>
    </padding>
    <children>
        <ImageView fx:id="productImageDetail"
                   fitHeight="210" fitWidth="300" styleClass="buttonCard">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </ImageView>
        <VBox prefHeight="20.0" prefWidth="100.0">
            <children>
                <VBox alignment="CENTER" prefHeight="30.0" prefWidth="100.0">
                    <children>
                        <Label fx:id="productNameDetailOrder" text="false" textFill="#7a5465">
                            <HBox.margin>
                                <Insets left="15.0" right="15.0">
                                </Insets>
                            </HBox.margin>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>

</VBox>
