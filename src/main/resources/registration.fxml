            stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RegisterController">
    <children>
        <Pane>

        </Pane>
        <AnchorPane prefHeight="48.0" prefWidth="310.0" stylesheets="@styles/style.css">

        </AnchorPane>

        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                    prefHeight="550.0" prefWidth="450.0" style="-fx-background-color: #2c344b;">
            <children>
                <VBox layoutX="51.0" layoutY="88.0" prefHeight="341.0" prefWidth="44.0">
                    <children>
                        <ImageView fitHeight="39.0" fitWidth="38.0" layoutX="114.0" layoutY="119.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/email.png"/>
                            </image>
                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                        </ImageView>
                        <ImageView fitHeight="39.0" fitWidth="38.0" layoutX="114.0" layoutY="119.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/password2.png"/>
                            </image>
                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                        </ImageView>
                        <ImageView fitHeight="39.0" fitWidth="38.0" layoutX="114.0" layoutY="119.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/user.png"/>
                            </image>
                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                        </ImageView>
                        <ImageView fitHeight="39.0" fitWidth="38.0" layoutX="114.0" layoutY="119.0" pickOnBounds="true"
                                   preserveRatio="true">
