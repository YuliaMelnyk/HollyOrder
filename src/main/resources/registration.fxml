                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </TextField>

                    </children>
                </VBox>
                <VBox layoutX="167.0" layoutY="421.0" prefHeight="119.0" prefWidth="144.0">
                    <children>
                        <Button fx:id="btn_register" alignment="CENTER" blendMode="HARD_LIGHT" contentDisplay="CENTER"
                                mnemonicParsing="false" onMouseClicked="#insertInto" prefHeight="51.0" prefWidth="136.0"
                                text="Registrate" VBox.vgrow="NEVER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="40.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
                <ImageView layoutX="15.0" layoutY="10.0" fx:id="backToMenu" onMouseClicked="#onBackToLogin"
                           fitHeight="40.0" fitWidth="40.0"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/iback_100.png"/>
                    </image>

                </ImageView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
