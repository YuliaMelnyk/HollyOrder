                                <Image url="@images/name.png"/>
                            </image>
                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                        </ImageView>
                        <ImageView fitHeight="41.0" fitWidth="37.0" layoutX="114.0" layoutY="200.0" pickOnBounds="true"
                                   preserveRatio="true">
