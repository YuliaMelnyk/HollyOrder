                                <Insets bottom="30.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="tf_surname" alignment="CENTER" maxHeight="49.0" maxWidth="417.0"
