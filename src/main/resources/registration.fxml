                                <Insets bottom="30.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </TextField>

                        <PasswordField fx:id="tf_password" alignment="CENTER" maxHeight="40.0" maxWidth="355.0"
                                       prefHeight="40.0" prefWidth="344.0" promptText="enter your password...">
                            <VBox.margin>
                                <Insets bottom="30.0"/>
                            </VBox.margin>
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </PasswordField>
                        <TextField fx:id="tf_name" alignment="CENTER" maxHeight="49.0" maxWidth="417.0"
                                   prefHeight="40.0" prefWidth="344.0" promptText="enter your name...">
